{
  "name": "ColorCustomizer",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A simple Google Chrome extension demo",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "panel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ]
}
